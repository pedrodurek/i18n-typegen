{
  "compilerOptions": {
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "es2018",
    "lib": ["es6", "esnext", "es2015", "dom"],
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
